<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="80dp" >

    <TextView
        android:id="@+id/item_attendance_id_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:text="100000001"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/item_attendance_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@id/item_attendance_id_text"
        android:text="John Smith"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="40dp"
        android:gravity="right"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_attendance_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Attended\nTime in: 8:30  Time out: 10:00"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_attendance_comment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxWidth="200dp"
            android:text="Comment"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>